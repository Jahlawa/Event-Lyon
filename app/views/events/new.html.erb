<p></p>

<!-- Zone du formulaire -->
      <%= form_tag url_for(action: 'create'), method: "post", class: "col col-6" do %>

      <%= label_tag 'Start date' %>
      <%= text_field_tag 'start_date', @event.start_date, class: "form-control" %>
      <small id="emailHelp" class="form-text text-muted">Ex: 2019-12-02 12:00</small>
      <br />

      <%= label_tag 'Duration' %>
      <%= text_field_tag 'duration', @event.duration, class: "form-control", placeholder: "Minutes"  %>
      <small id="emailHelp" class="form-text text-muted">It must be a multiple of 5</small>
      <br />

       <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @event.title, class: "form-control"  %>
      <small id="emailHelp" class="form-text text-muted">Between 5 and 140 characters</small>
      <br />

       <%= label_tag 'Description' %>
      <%= text_area_tag 'description', @event.description, class: "form-control"  %>
      <small id="emailHelp" class="form-text text-muted">Between 20 and 1000 characters</small>
      <br />

       <%= label_tag 'Price' %>
      <%= text_field_tag 'price', @event.price, class: "form-control", placeholder: "€"  %>
      <br />

       <%= label_tag 'Location' %>
      <%= text_field_tag 'location', @event.location, class: "form-control"  %>
      <br />

      <%= submit_tag "Create", class: "btn btn-primary mb-3" %>

      <% end %>

<% if @event.errors.any? %>
   <div class="alert alert-danger" role="alert">
       <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
       <ul>
         <% @event.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
       </ul>
     </div>
<% end %>